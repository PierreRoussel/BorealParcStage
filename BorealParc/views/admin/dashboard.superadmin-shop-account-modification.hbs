<div class="container">
    <div class="row">
        <div class="col s12">
            <a href="/dashboard" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
        </div>
        {{# if success }}
        <div class="center admin-form-ok">
            <h5><i class="material-icons">verified_user</i> La page magasin a bien été modifiée</h5>
        </div>
        {{ else }} {{# if errors }}
        <div class="center admin-form-wrong">
            <h5><i class="material-icons">close</i> Erreur: la page magasin n'a pas été modifiée</h5>
            <ul>
                {{# each errors }}
                <li>{{ this.msg }}</li>
                {{/each}}
            </ul>
        </div>
        {{/if}} {{/if}}
        <form action="/dashboard/shop-update" method="post" class="col s12">
            <div class="row">
                <h5 class="titre-mod-magasin">Modifier les informations du compte:</h5>
                <input id="id" type="hidden" name="id" value="{{ item._id }}">
                <div class="input-field col m12 l6">
                    <input id="login" type="text" name="login" class="validate" value="{{ item.user.login }}">
                    <label for="login">identifiant de connexion:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="companyName" type="text" name="companyName" class="validate" value="{{ item.companyName }}">
                    <label for="companyName">nom de l'entreprise:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="mail" type="text" name="mail" class="validate" value="{{ item.mail }}">
                    <label for="mail">adresse mail:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="newPassword" type="password" name="newPassword" class="validate">
                    <label for="newPassword">Nouveau mot de passe:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="newPasswordVerification" type="password" name="newPasswordVerification" class="validate">
                    <label for="newPasswordVerification">Repetition nouveau mot de passe:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <button class="orange lighten-1 lighten btn waves-effect waves-light" type="submit" name="action">Enregistrer les modifications
                    <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{> script/company-edit}}
