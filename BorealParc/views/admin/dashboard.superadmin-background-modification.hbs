<div class="container">
    <div class="row">
        <div class="col s12">
            <a href="/dashboard" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
        </div>
        <form action="/dashboard/background-modification" method="POST" enctype="multipart/form-data" class="col s12">
            <div class="row">
                <div class="file-field input-field col s12">
                    <div class="orange lighten-1 btn">
                        <span>Choix de l'image de bannière au format png</span>
                        <input name="borealback" type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <button class="orange lighten-1 btn waves-effect waves-light" type="submit" name="action">Enregistrer les modifications
                    <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s12">
                    <img src="/images/map/boreal_back.png" alt="Bannière boréal parc" style="height:50rem">
                </div>
            </div>
        </form>
    </div>
</div>
{{> script/basic}}