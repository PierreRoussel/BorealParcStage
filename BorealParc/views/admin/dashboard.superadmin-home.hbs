<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">{{ message }}

                <a href="/dashboard/creation-compte-magasin" class="orange lighten-1 waves-effect waves-light btn-large"><i class="material-icons left">brush</i>Créer nouveau compte magasin</a>
                <a href="/dashboard/modification-elements-site" class="orange lighten-1 waves-effect waves-light btn-large"><i class="material-icons left">colorize</i>Modifier des éléments du site</a>
                <a href="/dashboard/modification-mot-de-passe-superadmin" class="orange lighten-1 waves-effect waves-light btn-large"><i class="material-icons left">build</i>Changer mot de passe compte super-administrateur</a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <ul class="collection with-header">
                    <li class="collection-header"><h4>Liste des magasins</h4></li>
                    {{# each items }}
                        <li class="collection-item">
                            <div>
                                {{ this.companyName }} | géré par {{ this.mail }}
                                <a href="/dashboard/delete/{{ this._id }}" onclick="return confirm('Etes-vous certain de vouloir supprimer cet élément?');" class="orange lighten-1 secondary-content waves-effect waves-light btn"><i class="material-icons left">delete</i>Supprimer</a>
                                <!-- Lien vers /dashboard/contenu-magasin -->
                                <a href="/dashboard/update/{{ this._id  }}" class="orange lighten-1 secondary-content waves-effect waves-light btn"><i class="material-icons left">build</i>Modifier</a>
                            </div>
                        </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
{{> script/basic}}