<div class="container">
    <div class="section">
        <div class="row">
            <div class="col s12">
                <div class="card-panel orange">
                    <h5 class="white-text center">Bienvenue dans l'espace super-admin</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col s12 section-haute-dash">{{ message }}
                <a href="/dashboard/creation-compte-magasin" class="orange lighten-1 waves-effect waves-light btn btn-large bouton-dash"><i class="material-icons left">brush</i>Créer nouveau compte magasin</a>
                <a href="/dashboard/modification-elements-site" class="orange lighten-1 waves-effect waves-light btn btn-large bouton-dash"><i class="material-icons left">colorize</i>Modifier des éléments du site</a>
                <a href="/dashboard/modification-mot-de-passe-superadmin" class="orange lighten-1 waves-effect waves-light btn btn-large bouton-dash"><i class="material-icons left">build</i>Changer mot de passe compte super-administrateur</a>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <h4>Liste des magasins</h4>
                    </li>
                    {{# each items }}
                    <li class="collection-item dashboard-admin">
                        <div class="row">
                            <div class="col s6 m12">
                                {{ this.companyName }}<span id="mail-dashboard-supadmin">| géré par {{ this.mail }}</span></div>
                            <div class="col s6 m12">
                                <a href="/dashboard/delete/{{ this._id }}" onclick="return confirm('Etes-vous certain de vouloir supprimer cet élément?');" class="orange lighten-1 secondary-content waves-effect waves-light btn bouton-dash"><i class="material-icons left">delete</i>Supprimer</a>
                                <!-- Lien vers /dashboard/contenu-magasin -->
                                <a href="/dashboard/update/{{ this._id  }}" class="orange lighten-1 secondary-content waves-effect waves-light btn bouton-dash"><i class="material-icons left">build</i><g class="hide-on-small-only">Information</g> magasin</a>
                                <!-- Lien vers /dashboard/modification-infos -->
                                <a href="/dashboard/shop-update/{{ this._id  }}" class="orange lighten-1 secondary-content waves-effect waves-light btn bouton-dash"><i class="material-icons left">build</i><g class="hide-on-small-only">Information</g> compte</a> {{#if isSleepy}}
                                <a href="/dashboard/reveal/{{ this._id }}" onclick="return confirm('Cette entreprise sera visible');" class="green lighten-1 secondary-content waves-effect waves-light btn bouton-dash"><i class="material-icons left">cached</i><g class="hide-on-small-only">Mettre en</g> service</a> {{/if}} {{#unless isSleepy}}
                                <a href="/dashboard/hide/{{ this._id }}" onclick="return confirm('Cette entreprise sera en attente de confirmation');" class="orange lighten-1 secondary-content waves-effect waves-light btn bouton-dash"><i class="material-icons left">cached</i><g class="hide-on-small-only">Mettre en</g> attente</a> {{/unless}}
                            </div>
                        </div>
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
{{> script/basic}}
