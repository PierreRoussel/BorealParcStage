            <a href="/dashboard" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
            </div>
            <div class="col s12">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <h4>Liste des promotions</h4>
                    </li>
                    {{# each items }}
                    <li class="collection-item dashboard-admin">
                        <div>
                            {{ this.title }}
