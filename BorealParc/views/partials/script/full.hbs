<!--  Scripts -->
<script src="/javascript/jquery-3.2.1.min.js"></script>
<script src="/javascript/materialize.min.js"></script>
<script src="/javascript/init.js"></script>
<!--  Points of interest script -->
<script>
    $('.carousel.carousel-slider').carousel({
        fullWidth: true
    });
    setInterval(function() {
        $('.carousel.carousel-slider').carousel('next');
    }, 4000);

    /* FONCTION DU CHAMP INPUT POUR LA NEWSLETTER -> BTN DISABLED OU NON */
    var inputNews = document.querySelector('#mailCustomer');
    var btnNews = document.querySelector('#btn-newsletter');
    inputNews.addEventListener('keyup', (event) => {
        if (inputNews.value != '') {
            btnNews.classList.remove('disabled');
        } else {
            btnNews.classList.add('disabled');
        }
    });

    /* MATERIALBOXED POUR PAGE ENTREPRISE */
    $(document).ready(function() {
        $('.materialboxed').materialbox();
    });
    /* POUR QUE LE TEXTE INDEX DEFILE COMME ECRIS A LA MAIN */
    var i = 0;
    var txt = 'Vous trouverez à Boréal Parc autour de l’hypermarché Market sur … Hectares de nombreux commerces. Des restaurants (Poivre Rouge, l’étoile d’Or Asiatique, Mc Donald’s et Subway), de l’automobile (vente, entretien, réparation, lavage et contrôle technique), de la vente et réparation d’ordinateurs, de l’équipement de la maison (chauffage, portes et fenêtre, cuisine équipée, meubles, décoration et électroménager), de l’habillement (sport et outlet), du bricolage, du jardinage, des commerces traditionnels (cordonnerie, opticien et coiffeur) et un centre équestre.';

    function typeWriter() {
        if (i < txt.length) {
            document.getElementById("texte-presentation-index").innerHTML += txt.charAt(i);
            i++;
            if (document.body.clientWidth > 600) {
                setTimeout(typeWriter, 10);
            } else {
                setTimeout(typeWriter, 0);
            }
        }
    }
    window.onload = typeWriter;

</script>
