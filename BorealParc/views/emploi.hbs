<div class="container scrollspy">
        <div class="row">
            <div class="col s12 center">
                <h4>Les différentes offres emplois</h4>
                <div class="col s12">
                    <a href="/" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
                </div>
                <div class="row">
                    {{#each entreprise}}
                        <!-- <span>{{ this.companyName }}</span> -->
                        {{#each this.emploi}}
                            <div class="col s12">
                                        <div class="card">
                                            <div class="card-content">
                                                <span class="card-title entreprisePage">{{../companyName}}</span>
                                                <span class="center card-title">{{this.title}}</span>
                                                <div class="card-image">
                                                    <img src="/images{{ this.picture }}">
                                                </div>
                                                <p>{{{ breaklines this.description }}}</p> </br>
                                                <p>Poste recherché : {{this.poste}}</p>
                                            </div>
                                        </div>
                                    </div>                  
                        {{/each}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

{{> page/footer}} {{> script/full}}