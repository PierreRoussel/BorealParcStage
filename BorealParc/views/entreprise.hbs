{{#each entreprise.promotion}}
<div class="container">
    <div class="row">
        <div class="col s12 center">
            <div class="center card">
                <div class="card-content">
                    <span class="card-title entreprisePage">{{this.title}}</span>
                    <div class="card-image left">
                        <img src="/images{{ this.picture }}">
                    </div>
                    <p>{{{ breaklines this.description }}}</p> </br>
                </div>
                <div class="card action">
                    <p>Date de début : {{datePromoFormat this.startDate}} &nbsp &nbsp &nbsp &nbsp   Date de fin : {{datePromoFormat this.endDate}}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{{/each}}

